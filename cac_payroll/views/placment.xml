<odoo>
    <data>


        <record id="tree_view_product_specialization_page" model="ir.ui.view">
            <field name="name">Salary Step Placement</field>
            <field name="model">salary.steps.placement</field>
            <field name="arch" type="xml">
                <tree string="Salary Step Placement">
                    <field name="name"/>
                    <field name="scale_id"/>
                    <field name="gss_placement"/>
                    <field name="typeof"/>
                    <field name="year"/>
                    <field name="currency_id"/>
                </tree>
            </field>
        </record>


        <record id="form_view_slary_step_placement" model="ir.ui.view">
            <field name="name">Salary Step Placement</field>
            <field name="model">salary.steps.placement</field>
            <field name="arch" type="xml">
                <form string="Salary Step Placement">
                    <sheet>


                        <group>
                            <field name="name"/>
                            <field name="is_usd" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Salary Steps">
                                <field name="symbol" invisible="1"/>

                                <field name="scale_id" invisible="1"/>
                                <field name="step_ids" nolable="1" domain="[('active','=',True)]">
                                    <tree editable="bottom">
                                        <field name="step" readonly="1" force_save="1"/>
                                        <field name="scale_id" domain="[('state','=','approved')]" required="1"
                                               options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                                        <field name="gss_placement_id" domain="[('scale_id','=',scale_id),('scale_id.is_gss_scale','=',True)]"/>

                                        <field name="scale_type_of_increase" domain="[('scale_id','=',scale_id)]"/>

                                        <field name="year"/>
                                        <field name="currency_id" invisible=""/>
                                        <field name="tax_amount" widget='monetary' column_invisible="1" invisible="1"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="net_amount" widget='monetary'
                                               attrs="{'column_invisible': [('parent.is_usd', '=', False)]}"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="amount" widget='monetary'
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="step_increase_amount"
                                               attrs="{'column_invisible':[('parent.symbol','!=','EGP')]}"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_slary_step_placement_pages" model="ir.actions.act_window">
            <field name="name">Salary Step Placement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.steps.placement</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_slary_step_placement_views" name="Salary Step Placement"
                  parent="hr.menu_human_resources_configuration"
                  action="cac_payroll.action_slary_step_placement_pages" sequence="8"/>


    </data>
</odoo>