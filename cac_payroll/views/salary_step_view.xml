<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="salary_steps_view_form" model="ir.ui.view">
            <field name="name">salary.steps.view.form</field>
            <field name="model">salary.steps</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="step"/>
                                <field name="scale_id" required="1"
                                       options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>

                            </group>
                            <group>
                                <field name="year"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="net_amount"
                                       attrs="{'invisible': [('currency_id', '!=', 2)]}"
                                       widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="salary_steps_view_tree" model="ir.ui.view">
            <field name="name">salary.steps.tree</field>
            <field name="model">salary.steps</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="job_id"/>
                    <field name="step"/>
                    <field name="scale_id"/>
                    <field name="year"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>


        <record id="salary_steps_view_pivot" model="ir.ui.view">
            <field name="name">salary.steps.pivot</field>
            <field name="model">salary.steps</field>
            <field name="arch" type="xml">
                <pivot string="Salary Steps" sample="1">
                    <field name="category_id" type="col"/>
                    <field name="job_id" />
                    <field name="currency_id" invisible="1"/>
                    <field name="amount" type="measure" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="scale_id" type="row"/>
                    <field name="step" type="row"/>
                </pivot>
            </field>
        </record>


        <record id="salary_steps_view_search" model="ir.ui.view">
            <field name="name">salary.steps.pivosearcht</field>
            <field name="model">salary.steps</field>
            <field name="arch" type="xml">
                <search >
                    <field name="scale_id"/>
                    <field name="job_id"/>
                    <field name="year"/>
                    <group expand="0" string="Group By">
                        <filter string="Scale"  name="scale_id" context="{'group_by':'scale_id'}"/>
                        <filter string="Job" name="job_id" context="{'group_by':'job_id'}"/>
                        <filter string="Year" name="year" context="{'group_by':'year'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="salary_step_action" model="ir.actions.act_window">
            <field name="name">Salary Steps</field>
            <field name="res_model">salary.steps</field>
            <field name="view_mode">pivot,tree,form</field>
            <field name="search_view_id" ref="salary_steps_view_search"/>
            <field name="domain">['|',('active','=',True),('active','=',False)]</field>
            <field name="target">current</field>
        </record>


        <!-- This Menu Item For Employee Jobs -->
        <menuitem id="salary_step_menu"
                  name="Salary Steps"
                  parent="hr.menu_human_resources_configuration"
                  action="salary_step_action"
                  sequence="14"/>

    </data>
</odoo>
