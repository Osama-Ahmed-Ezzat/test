<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_job_view_form" model="ir.ui.view">
            <field name="name">employee.job.view.form</field>
            <field name="model">employee.job</field>
            <field name="arch" type="xml">
                <form string="">
					<!-- <header>
                        <button name="action_approve" string="Approve" class="oe_highlight" states="draft"  type="object" groups="cac_payroll.access_approve_salary_scale"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved" />
                    </header> -->
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
								<field name="scale_id" required="1" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
							</group>
                        </group>
                        <notebook>
                            <page string="Salary Steps">
                                <field name="step_ids" nolable="1"
                                    create="0">
                                    <tree editable="bottom" create="0">
                                        <field name="step" readonly="1"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_job_view_tree" model="ir.ui.view">
            <field name="name">employee.job.tree</field>
            <field name="model">employee.job</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="scale_id"/>
                </tree>
            </field>
        </record>

        <record id="employee_job_action" model="ir.actions.act_window">
            <field name="name">Employee Jobs</field>
            <field name="res_model">employee.job</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>


        <!-- This Menu Item For Employee Jobs -->
        <!-- <menuitem id="employee_job_menu"
                  name="Employee Jobs"
                  parent="hr.menu_human_resources_configuration"
                  action="employee_job_action"
                  sequence="12"/> -->

    </data>
</odoo>
