<odoo>
    <data>
        <record model="ir.ui.view" id="hr_job_view_form_inherit_cac_payroll">
            <field name="name">hr.job.form.view</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="inside">
                    <label for="category_id"/>
                    <h3>
                        <field name="category_id" placeholder="Job Category"/>
                        <field name="is_usd" invisible="1"/>
                    </h3>
                </xpath>
                <xpath expr="//notebook/page[2]" position="after">
                    <page string="Salary Steps">
                        <field name="scale_id" invisible="1"/>
                        <field name="step_ids" nolable="1" domain="[('active','=',True)]">
                            <tree editable="bottom">
                                <field name="step" readonly="1" force_save="1"/>
                                <field name="scale_id" domain="[('state','=','approved')]" required="1"
                                       options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                                <field name="year"/>
                                <field name="currency_id" invisible=""/>
<!--                                <field name="tax_amount" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
                                <field name="net_amount" widget='monetary'
                                       attrs="{'column_invisible': [('parent.is_usd', '=', False)]}"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="amount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <!-- <xpath expr="//sheet/div[2]" position="after">
                    <group>
                        <group>
                            <field name="scale_id" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                        </group>
                        <group>
                            <field name="year" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </xpath>     -->
            </field>
        </record>
    </data>
</odoo>