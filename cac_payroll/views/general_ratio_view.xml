<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="general_ratio_view_form" model="ir.ui.view">
            <field name="name">general.ratio.view.form</field>
            <field name="model">general.ratio</field>
            <field name="arch" type="xml">
                <form string="">
					<header>
                        <button name="action_approve" string="Approve" class="oe_highlight" states="draft"  type="object" groups="cac_payroll.access_approve_salary_scale"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="year" required="1" placeholder="20/21" attrs="{'readonly':[('state','=','approved')]}"/>
								<field name="annual_increase_ratio" required="1" attrs="{'readonly':[('state','=','approved')]}"/>
                                <field name="cost_of_living" invisible="0" required="1" attrs="{'readonly':[('state','=','approved')]}"/>
							</group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="general_ratio_view_tree" model="ir.ui.view">
            <field name="name">general.ratio.tree</field>
            <field name="model">general.ratio</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="year"/>
                    <field name="annual_increase_ratio"/>
                    <field name="cost_of_living" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="general_ratio_action" model="ir.actions.act_window">
            <field name="name">General Ratio</field>
            <field name="res_model">general.ratio</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>


        <!-- This Menu Item For General Ratio -->
        <menuitem id="general_ratio_menu"
                  name="General Ratio"
                  parent="hr.menu_human_resources_configuration"
                  action="general_ratio_action"
                  sequence="12"/>

    </data>
</odoo>
